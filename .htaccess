# BEGIN Security

# Block folder indexing
Options All -Indexes

# Hide SVN / GIT files
RedirectMatch 404 /\\.(git|gitignore|gitmodules|sh|svn|log|htaccess|htpasswd|ini|phps|fla|psd)(/.*|$)

# Hide private files
<FilesMatch "(-config.php|timthumb.php)$">
	Order Allow,Deny
	Deny from all
</FilesMatch>

# Block access to backup and source files.
<FilesMatch "(^#.*#|\.(bak|config|dist|fla|inc|ini|log|psd|sh|sql|sw[op])|~)$">
    Order allow,deny
    Deny from all
    Satisfy All
</FilesMatch>

# Block access to .htacces
<Files .htaccess>
	Order Allow,Deny
	Deny from all
</Files>

# Block access to readme.html
<Files readme.html>
	Order Allow,Deny
	Deny from all
</Files>

# END Security

