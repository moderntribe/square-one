/* -----------------------------------------------------------------------------
 *
 * Component: Site Footer
 *
 * ----------------------------------------------------------------------------- */

.c-site-footer {
	padding: var(--spacer-70) 0;
	background-color: var(--color-black);
}

/* -----------------------------------------------------------------------------
 * Site Footer: Content Wrapper
 * ----------------------------------------------------------------------------- */

.c-site-footer__wrap {
	@media (--viewport-large) {
		display: flex;
		flex-flow: row nowrap;
		justify-content: space-between;
		grid-column-gap: var(--grid-gutter);
	}
}

/* -----------------------------------------------------------------------------
 * Site Footer: Content
 * ----------------------------------------------------------------------------- */

.c-site-footer__content {
	flex-basis: 50%;
}

/* -----------------------------------------------------------------------------
 * Site Footer: Logo
 * ----------------------------------------------------------------------------- */

.c-site-footer__logo {
	max-width: var(--grid-4-col);
	margin: 0 auto;

	@media (--viewport-large) {
		margin: 0;
	}
}

/* -----------------------------------------------------------------------------
 * Site Footer: Description
 * ----------------------------------------------------------------------------- */

.c-site-footer__description {
	margin-top: var(--spacer-20);

	p,
	li {
		@mixin t-input;

		font-size: 18px;
		line-height: 1.75;
	}
}

.c-site-footer__ctas {
	display: flex;
	flex-flow: column nowrap;
	gap: var(--spacer-30);
	margin-top: var(--spacer-40);

	@media (--viewport-small) {
		flex-flow: row wrap;
	}
}

a.c-site-footer_cta {
	width: 100%;
	text-align: center;

	@media (--viewport-small) {
		width: auto;
		text-align: left;
	}
}

/* -----------------------------------------------------------------------------
 * Site Footer: Nav Container
 * ----------------------------------------------------------------------------- */

.c-site-footer__nav {
	margin-top: var(--spacer-70);

	@media (--viewport-large) {
		margin-top: var(--spacer-20);
	}
}

/* -----------------------------------------------------------------------------
 * Site Footer: Legal
 * ----------------------------------------------------------------------------- */

.c-site-footer__legal {
	margin-top: var(--spacer-70);
	padding-top: var(--spacer-30);
	border-top: 1px solid var(--color-grey-light);

	@media (--viewport-full) {
		display: flex;
		flex-flow: row nowrap;
		justify-content: space-between;
		grid-column-gap: var(--grid-gutter);
	}
}

/* -----------------------------------------------------------------------------
 * Site Footer: Copyright
 * ----------------------------------------------------------------------------- */

.c-site-footer__copyright {
	margin-top: var(--spacer-30);

	@media (--viewport-full) {
		margin-top: 0;
	}
}
