/* -----------------------------------------------------------------------------
 *
 * Component: Card
 *
 * ----------------------------------------------------------------------------- */

.c-card {
	display: flex;
	flex-flow: column nowrap;

	/* CASE: Whole card is a link. */
	&.has-target-link {
		transition: var(--transition);

		&:hover {
			cursor: pointer;
		}
	}

	/* CASE: Centers all content within the card. */
	&.is-centered-text {
		text-align: center;
	}

	/* CASE: Style: Elevated */
	&.c-card--style-elevated {
		padding: var(--spacer-30) 0;
		box-shadow: var(--box-shadow-20);

		/* CASE: Whole card is a link. */
		&.has-target-link {

			&:hover,
			&:focus-within {
				box-shadow: var(--box-shadow-20-hover);
			}
		}
	}

	/* CASE: Style: Outlined */
	&.c-card--style-outlined {
		padding: var(--spacer-30) 0;
		border: 1px solid var(--color-border);

		/* CASE: Whole card is a link. */
		&.has-target-link {

			&:hover,
			&:focus-within {
				border-color: var(--color-link-hover);
			}
		}
	}

	/* CASE: Style: Inline */
	&.c-card--style-inline {
		display: flex;
		flex-flow: row;
		align-items: center;
		margin-top: 0;
		margin-bottom: 0;
		padding: var(--spacer-20) 0;
		border-bottom: 1px solid var(--color-grey-light);

		/* Need to drop the font size down a bit on the tag for inline cards */
		.t-tag {
			font-size: 11px;
		}

		&:hover {
			.c-card__title {
				color: var(--color-link-hover);
			}
		}
	}
}

/* -----------------------------------------------------------------------------
 * Card Media Container
 * ----------------------------------------------------------------------------- */

.c-card__media {
	margin-bottom: var(--spacer-30);

	/* CASE: Style: Outlined & Elevated */
	.c-card--style-elevated &,
	.c-card--style-outlined & {
		margin-top: calc(-1 * var(--spacer-30));
	}

	/* CASE: Style: Inline */
	.c-card--style-inline & {
		display: none;
		flex-shrink: 0;

		@media(--viewport-medium) {
			display: block;
			width: var(--grid-2-col);
			margin-right: var(--spacer-30);
			margin-bottom: 0;
		}
	}
}

/* -----------------------------------------------------------------------------
 * Card Content Container
 * ----------------------------------------------------------------------------- */

.c-card__content {
	margin: 0 0 auto; /* Pushes the CTA to the bottom of the card. */

	/* CASE: Style: Outlined & Elevated */
	.c-card--style-elevated &,
	.c-card--style-outlined & {
		padding: 0 var(--spacer-30);
	}
}

/* -----------------------------------------------------------------------------
 * Card Meta
 * ----------------------------------------------------------------------------- */

.c-card__meta {
	margin-bottom: var(--spacer-10);
}

/* -----------------------------------------------------------------------------
 * Card Meta: Secondary
 * ----------------------------------------------------------------------------- */

.c-card__meta--secondary {
	margin-top: var(--spacer-10);
}

/* -----------------------------------------------------------------------------
 * Card Title
 * ----------------------------------------------------------------------------- */

.c-card__title {

	/* CASE: Style: Inline */
	.c-card--style-inline & {
		display: block;
		text-decoration: none;

		&:focus {
			text-decoration: underline;
		}
	}
}

/* -----------------------------------------------------------------------------
 * Card Date
 * ----------------------------------------------------------------------------- */

.c-card__date {
	@mixin t-body-small;

	color: var(--color-grey);
}

/* -----------------------------------------------------------------------------
 * Card Description
 * ----------------------------------------------------------------------------- */

.c-card__description {
	margin-top: var(--spacer-10);
}

/* -----------------------------------------------------------------------------
 * Card Call To Action
 * ----------------------------------------------------------------------------- */

.c-card__cta {
	margin-top: var(--spacer-30);

	/* CASE: Style: Outlined & Elevated */
	.c-card--style-elevated &,
	.c-card--style-outlined & {
		padding: 0 var(--spacer-30);
	}
}
