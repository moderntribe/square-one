/* -----------------------------------------------------------------------------
 *
 * ACF Blocks
 *
 * Styles applicable to "acf/" namespaced blocks.
 *
 * ----------------------------------------------------------------------------- */

.wp-block[data-type^="acf/"] {
	max-width: none;
	width: 100%;
	clear: both;

	/* Add a max-width to the edit UI for ACF blocks */
	.acf-block-fields {
		max-width: var(--grid-width);
		margin-left: auto;
		margin-right: auto;
	}
}

/* -----------------------------------------------------------------------------
 *
 * Block: Gallery Slider
 *
 * ----------------------------------------------------------------------------- */

.wp-block[data-type="acf/galleryslider"] {
	/* CASE: Fixed image ratio gallery slider */
	.b-gallery-slider--fixed:not(.initialized) {

		> .c-slider__wrapper {
			justify-content: center;
			transform: translate3d(0, 0, 0);
			overflow-x: hidden;
		}

		.c-slider__slide:first-child {
			position: relative;

			&:before,
			&:after {
				content: '';
				width: 200px;
				height: 100%;
				background: var(--color-grey-light);
				position: absolute;
				top: 0;
			}

			&:before {
				right: calc(100% + 40px);
			}

			&:after {
				left: calc(100% + 40px);
			}
		}
	}
}
