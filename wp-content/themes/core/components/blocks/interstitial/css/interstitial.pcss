/* -----------------------------------------------------------------------------
 *
 * Component: Block: Interstitial
 *
 * ----------------------------------------------------------------------------- */

.b-interstitial {
	position: relative;
	display: flex;
	align-items: center;
	padding: var(--spacer-80) 0;
	background-color: var(--color-grey-dark);

	@media (--viewport-full) {
		padding: var(--spacer-90) 0;
	}
}

/* -----------------------------------------------------------------------------
 * Interstitial: Content
 * ----------------------------------------------------------------------------- */

.b-interstitial__content {
	position: relative;
}
