.ginput_preview,
.gf-file .validation_message {
	background-color: var(--gf-control-file-preview-bgd-color);
	height: auto;
	font-size: var(--form-control-file-font-size);
	padding: var(--gf-control-file-padding);
	line-height: 1;
	border: var(--gf-control-file-border-size) solid var(--gf-control-file-border-color);
	border-top: 0;

	img {
		margin: 0 2px 0 0;
		display: inline-block;
		vertical-align: middle;
	}

	strong {
		display: inline-block;
		vertical-align: middle;
		font-weight: normal;
	}
}

.gf-file .validation_message {
	li {
		margin-bottom: 0;

		& ~ li {
			margin-top: 10px;
		}
	}
}

/* Multiple */
.gform_drop_instructions {
	font: var(--gf-control-file-font-style) var(--gf-control-file-font-weight) var(--gf-control-file-font-size) / var(--gf-control-file-line-height) var(--gf-control-file-font-family);

	@media (--viewport-medium) {
		margin-right: 10px;
	}
}

.gform_fileupload_multifile {
	border: var(--gf-control-file-border-size) solid var(--gf-control-file-border-color);
	padding: var(--gf-control-filemulti-padding);
	background-color: var(--gf-control-file-bgd-color);

	input[type="button"],
	input[type="file"] {
		@mixin button-submit;

		margin-top: var(--gf-control-filemulti-margin-top);

		@media (--viewport-medium) {
			margin-top: 0;
		}
	}
}
