.slick-arrow {

	transition: var(--transition);
	border: 0;
	background: 0;
	color: var(--white);
	opacity: 0.5;
	font-size: 0;
	z-index: 5;
	position: absolute;
	text-align: center;
	width: 50px;
	height: 50px;
	top: 50%;
	margin-top: -25px;

	&:hover,
	&:focus {
		opacity: 1;
	}
	&:focus {
		outline: 1px dotted;
	}

	/* CASE: disabled */
	&.slick-disabled {
		opacity: 0;
	}

	&:after {
		@mixin icon;
		font-size: 40px;
		line-height: 1;
	}
}

.slick-prev {
	left: 0;
	&:after {
		content: var(--slick-arrow-prev-icon);
	}
}

.slick-next {
	right: 0;
	&:after {
		content: var(--slick-arrow-next-icon);
	}
}
