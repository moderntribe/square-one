
/* -----------------------------------------------------------------------------
 * Base
 * ----------------------------------------------------------------------------- */

.chosen-container {
	@mixin touch;
	position: relative;
	display: inline-block;
	vertical-align: middle;
	font-size: var(--chosen-font-size);
	width: 100% !important;
	* {
		box-sizing: border-box;
	}
	.chosen-drop {
		position: absolute;
		top: 100%;
		left: -9999px;
		z-index: 1010;
		width: 100%;
		border: var(--chosen-border-size) solid var(--chosen-border-color);
		border-top: 0;
		background-color: var(--chosen-drop-bgd-color);
		box-shadow: 0 4px 5px rgba(0, 0, 0, 0.15);
	}
	&.chosen-with-drop .chosen-drop {
		left: 0;
	}
	a {
		cursor: pointer;
		color: var(--chosen-placeholder-color);
	}
	.search-choice,
	.chosen-single {
		.group-name {
			margin-right: 4px;
			overflow: hidden;
			white-space: nowrap;
			text-overflow: ellipsis;
			font-weight: normal;
			color: var(--chosen-color);
			&:after {
				content: ":";
				padding-left: 2px;
				vertical-align: top;
			}
		}
	}
}

/* -----------------------------------------------------------------------------
 * Single Chosen
 * ----------------------------------------------------------------------------- */

.chosen-container-single {
	.chosen-single {
		position: relative;
		display: block;
		overflow: hidden;
		padding: 0 0 0 var(--chosen-padding);
		height: var(--chosen-height);
		border: var(--chosen-border-size) solid var(--chosen-border-color);
		border-radius: var(--chosen-border-radius);
		background-color: var(--chosen-bgd-color);
		color: var(--chosen-color);
		text-decoration: none;
		white-space: nowrap;
		letter-spacing: var(--chosen-letter-spacing);
		text-transform: var(--chosen-text-transform);
		font: var(--chosen-font-style) var(--chosen-font-weight) var(--chosen-font-size) / var(--chosen-font-line-height) var(--chosen-font-family);

		span {
			display: block;
			overflow: hidden;
			margin-right: var(--chosen-option-chosen-margin-right);
			text-overflow: ellipsis;
			white-space: nowrap;
			font-weight: var(--chosen-option-chosen-font-weight);
		}
	}
	.chosen-default {
		color: var(--chosen-placeholder-color);
		font: var(--chosen-default-font-style) var(--chosen-default-font-weight) var(--chosen-default-font-size) / var(--chosen-default-font-line-height) var(--chosen-default-font-family);
		span {
			font-weight: var(--chosen-default-option-font-weight);
		}
	}
	.chosen-single-with-deselect span {
		margin-right: var(--chosen-option-chosen-margin-right);
	}
	.chosen-search {
		position: relative;
		z-index: 1010;
		margin: 0;
		padding: 0 0 8px;
		white-space: nowrap;

		&:after {
			@mixin icon;
			content: var(--chosen-search-ui-icon);
			position: absolute;
			right: var(--chosen-search-ui-position-right);
			color: var(--chosen-search-ui-color);
			font-size: var(--chosen-search-ui-font-size);
			height: var(--chosen-search-height);
			line-height: var(--chosen-search-ui-line-height);
			top: var(--chosen-search-ui-position-top);
			width: var(--chosen-search-ui-width);
			text-align: center;
			cursor: default;
		}

		input[type="text"] {
			margin: 0 0 1px;
			padding: var(--chosen-search-padding);
			width: 100%;
			height: var(--chosen-search-height);
			border: 1px solid var(--chosen-search-border-color);
			border-left: 0;
			border-right: 0;
			background-color: var(--chosen-search-bgd-color);
			border-radius: 0;
			&:focus {
				box-shadow: none;
				border-left: 0;
				border-right: 0;
			}
		}
	}
	.chosen-drop {
		margin-top: -1px;
		border-radius: var(--chosen-drop-border-radius);
		background-clip: padding-box;
	}
	&.chosen-container-single-nosearch .chosen-search {
		position: absolute;
		left: -9999px;
	}
}

/* -----------------------------------------------------------------------------
 * Results
 * ----------------------------------------------------------------------------- */

.chosen-container .chosen-results {

	position: relative;
	overflow-x: hidden;
	overflow-y: auto;
	margin: 0 0 10px;
	padding: 0;
	max-height: 240px;
	-webkit-overflow-scrolling: touch;
	font: var(--chosen-results-font-style) var(--chosen-results-font-weight) var(--chosen-results-font-size) / var(--chosen-results-line-height) var(--chosen-results-font-family);

	li {
		display: none;
		margin: 0;
		padding: var(--chosen-results-padding);
		list-style: none;
		line-height: 1;
		word-wrap: break-word;
		-webkit-touch-callout: none;
		&.active-result {
			display: list-item;
			cursor: pointer;
		}
		&.disabled-result {
			display: list-item;
			color: var(--chosen-results-color-disabled);
			cursor: default;
		}
		&.highlighted {
			background-color: var(--chosen-results-bgd-color-highlighted);
			color: var(--chosen-results-color-highlighted);
		}
		&.no-results {
			display: list-item;
			background-color: var(--chosen-results-bgd-color-no-results);
			color: var(--chosen-results-color-no-results);
		}
		&.group-result {
			display: list-item;
			font-weight: var(--chosen-results-group-font-weight);
			cursor: default;
		}
		&.group-option {
			padding-left: var(--chosen-results-group-padding-left);
		}
		em {
			font-style: normal;
			text-decoration: underline;
		}
	}
}

/* -----------------------------------------------------------------------------
 * Multi Chosen
 * ----------------------------------------------------------------------------- */

.chosen-container-multi {
	.chosen-choices {
		position: relative;
		overflow: hidden;
		margin: 0;
		padding: 0 var(--chosen-padding);
		width: 100%;
		height: auto !important;
		border: var(--chosen-border-size) solid var(--chosen-border-color);
		border-radius: var(--chosen-border-radius);
		background-color: var(--chosen-bgd-color);
		cursor: text;
		color: var(--chosen-color);
		min-height: var(--chosen-multiple-min-height);
	}
	.chosen-choices li {
		float: left;
		list-style: none;
		&.search-field {
			margin: 0;
			padding: 0;
			white-space: nowrap;
			input[type="text"] {
				margin: 1px 0;
				padding: 0;
				height: var(--chosen-multiple-min-height);
				outline: 0;
				border: 0 !important;
				width: auto !important;
				color: var(--chosen-placeholder-color);
				line-height: normal;
				&:focus {
					color: var(--chosen-placeholder-color-focus);
					border: 0;
					box-shadow: none;
				}
			}
		}
		&.search-choice {
			position: relative;
			margin: var(--chosen-multiple-choice-margin);
			padding: var(--chosen-multiple-choice-padding);
			max-width: 100%;
			background-color: var(--chosen-multiple-choice-bgd-color);
			color: var(--chosen-multiple-choice-color);
			cursor: default;
			overflow: hidden;
			font: var(--chosen-multiple-choice-font-style) var(--chosen-multiple-choice-font-weight) var(--chosen-multiple-choice-font-size) / var(--chosen-multiple-choice-line-height) var(--chosen-multiple-choice-font-family);
			span {
				word-wrap: break-word;
			}
			.search-choice-close {
				position: absolute;
				top: 0;
				right: 0;
				display: block;
				width: var(--chosen-multiple-choice-close-width);
				height: 100%;
				color: var(--chosen-multiple-choice-close-color);
				text-align: center;
				border: 0;
				&:before {
					@mixin icon;
					content: var(--chosen-multiple-choice-close-icon);
					color: var(--chosen-multiple-choice-close-color);
					font-size: var(--chosen-multiple-choice-close-font-size);
					position: absolute;
					top: 50%;
					width: var(--chosen-multiple-choice-close-width);
					right: 0;
					z-index: 1;
					margin-top: var(--chosen-multiple-choice-close-margin-top);
					height: var(--chosen-multiple-choice-close-height);
				}

				&:after {
					transition: var(--transition);
					content: '';
					height: 100%;
					position: absolute;
					width: var(--chosen-multiple-choice-close-width);
					background-color: var(--chosen-multiple-choice-close-bgd-color);
					top: 0;
					right: 0;
				}

				&:hover,
				&:focus {
					&:after {
						background-color: var(--chosen-multiple-choice-close-bgd-color-hover);
					}
				}
			}
		}
	}
	.chosen-results {
		margin: 0;
		padding: var(--chosen-multiple-results-padding);
	}
	.chosen-drop .result-selected {
		display: list-item;
		color: var(--chosen-multiple-result-selected-color);
		cursor: default;
	}
}

/* -----------------------------------------------------------------------------
 * Active
 * ----------------------------------------------------------------------------- */

.chosen-container-active {
	.chosen-single {
		border-color: var(--chosen-border-color-focus);
	}
	&.chosen-with-drop {
		.chosen-single {
			border-color: var(--chosen-border-color-focus);
			box-shadow: 0 0 0 var(--chosen-border-size-focus) var(--chosen-border-color-focus);
			border-bottom-left-radius: 0;
			border-bottom-right-radius: 0;
		}
	}
	.chosen-choices {
		transition: var(--transition);
		border: var(--chosen-border-size-focus) solid var(--chosen-border-color-focus);
		box-shadow: 0 0 0 var(--chosen-border-size-focus) var(--chosen-border-color-focus);
	}
}

/* -----------------------------------------------------------------------------
 * Disabled Support
 * ----------------------------------------------------------------------------- */

.chosen-disabled {
	opacity: 0.5 !important;
	cursor: default;
	.chosen-single {
		cursor: default;
	}
	.chosen-choices .search-choice .search-choice-close {
		cursor: default;
	}
}
