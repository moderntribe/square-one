/* -----------------------------------------------------------------------------
 *
 * Globals: HTML & Body
 *
 * ----------------------------------------------------------------------------- */

html {
	background: var(--color-bgd);
}

body {
	background: var(--color-bgd-content);
	overflow-x: hidden;
	overflow-y: scroll;
	width: 100%;
}

/* -----------------------------------------------------------------------------
 *
 * Globals: Font & Color
 *
 * ----------------------------------------------------------------------------- */

body,
form,
button,
input,
select,
textarea {
	font: var(--font-weight-regular) normal 100%/var(--line-height-base) var(--font-family-base);
	color: var(--color-text);
}

/* -----------------------------------------------------------------------------
 *
 * Globals: Text Selection
 *
 * ----------------------------------------------------------------------------- */

::selection {
	background: var(--color-bgd-selection);
	color: var(--color-text-selection);
	text-shadow: none;
}
