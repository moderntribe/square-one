	#nav,
	#backtoblog {
		padding: 3px 2px;
		margin: 0 auto;
		text-align: center;
		font-family: var(--font-family-base);
		font-size: 15px;
		a {
			transition: var(--transition);
			padding: 3px 0;
			margin: 0 auto;
			text-align: center;
