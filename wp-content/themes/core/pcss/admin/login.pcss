* {
	box-sizing: border-box;
}

.login {

	height: 100%;
	position: relative;
	width: 100%;
	display: table;
	background: var(--bgd-login);

	#login {
		overflow: hidden;
		position: relative;
		z-index: 1;
		padding: 80px 25px 100px;
		display: table-cell;
		width: 100%;
		vertical-align: middle;

		& > * {
			max-width: 425px;
			margin-left: auto;
			margin-right: auto;
		}
	}

	&.wp-core-ui {

		.button-primary {
			transition: var(--transition);
			background: var(--primary);
			font-family: var(--font-family-base);
			color: var(--white);
			border: 0;
			border-radius: 0;
			box-shadow: none;
			display: block;
			width: 100%;
			padding: 10px;
			margin: 15px auto 0;
			font-size: 18px;
			height: auto;
			font-weight: bold;
			float: none;

			&:hover {
				background-color: var(--secondary);
			}
		}
	}

	form {
		margin: 8px auto 10px;
		padding: 20px 24px 24px;
		backface-visibility: hidden;
		position: relative !important;

		.forgetmenot {
			float: none;
		}
	}

