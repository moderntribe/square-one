/* -----------------------------------------------------------------------------
 *
 * Media
 *
 * ----------------------------------------------------------------------------- */

img,
iframe,
object,
embed,
video {
	border: 0;
	line-height: 0;
	height: auto;
	margin-top: var(--spacer);
	margin-bottom: var(--spacer);
	display: block;
	max-width: 100%;

	/* Messes with WP editor image resizing
	and don't think it's needed
	width: auto; */
}

img {
	&[class*="align"],
	&[class*="wp-image-"],
	&[class*="attachment-"] {
		height: auto;
		display: block;
		max-width: 100%;
	}
	&.alignleft,
	&.alignright {
		margin-top: var(--spacer);
		margin-bottom: var(--spacer);
	}
}

.wp-caption {
	margin: var(--spacer) auto;
	width: auto !important;
	img {
		margin-bottom: 0;
		margin-top: 0;
	}
}

.wp-caption-text,
.entry-caption,
.wp-caption-dd {
	margin: 0 auto;
	padding: 16px 0;
	line-height: 1.333;
	font-size: 16px;
	text-align: left;
}

.wp-caption-dt {
	margin: 0;
}

.aligncenter {
	margin-left: auto;
	margin-right: auto;
	display: block;
}

.alignleft {
	float: left;
	&.wp-caption {
		margin-top: var(--spacer);
		margin-bottom: var(--spacer);
	}
}

.alignright {
	float: right;
	&img,
	&.wp-caption {
		margin-top: var(--spacer);
		margin-bottom: var(--spacer);
	}
}

.alignleft,
.alignright {
	max-width: 35% !important;
	&img,
	&.wp-caption {
		margin-bottom: var(--spacer);
	}
}
