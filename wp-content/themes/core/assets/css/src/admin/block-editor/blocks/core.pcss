/* -----------------------------------------------------------------------------
 *
 * WP Core Block Styles & Overrides
 *
 * Styles that apply to WP Core blocks or reset styles applied
 * by the block editor and wp-admin.
 *
 * ----------------------------------------------------------------------------- */

[data-type^="core"] {
	/* -----------------------------------------------------------------------------
	 * Block Editor Kitchen Sink Grid Widths
	 * ----------------------------------------------------------------------------- */

	max-width: var(--grid-width-staggered-double);
	width: calc(100% - 2 * var(--grid-gutter-small));

	@media (--viewport-medium) {
		width: calc(100% - 2 * var(--grid-gutter));
	}

	&[data-align="wide"] {
		max-width: var(--grid-width-staggered);
	}

	&[data-align="full"] {
		max-width: var(--grid-width-full-bleed);
	}

	/* CASE: core blocks within a block should be reset. */
	.c-block & {
		width: 100%;
		max-width: none;
	}

	/* -----------------------------------------------------------------------------
	 * Horizontal Rule/Separator
	 *
	 * Override WP-Core's heavy-selector max-width value.
	 * ----------------------------------------------------------------------------- */
	hr {
		max-width: none !important;
	}

	/* -----------------------------------------------------------------------------
	 * Blockquotes
	 *
	 * Override WP-Core's default styles
	 * ----------------------------------------------------------------------------- */
	.wp-block-quote {
		border-left: 0;
		padding-left: 0;
	}

	/* -----------------------------------------------------------------------------
	 * Overline
	 *
	 * Overrides default selector spacing for this editor style
	 * ----------------------------------------------------------------------------- */

	&.is-style-t-overline {

		& + .wp-block > * {
			margin-top: var(--spacer-20);
		}
	}
}
