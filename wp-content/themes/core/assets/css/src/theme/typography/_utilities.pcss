/* -----------------------------------------------------------------------------
 *
 * Utility Classes: Typography
 *
 * ----------------------------------------------------------------------------- */

/* -------------------------------------------------------------------------
 * Display X-Large
 * ------------------------------------------------------------------------- */

.t-display-x-large {
	@mixin t-display-x-large;
}

/* -------------------------------------------------------------------------
 * Display Large
 * ------------------------------------------------------------------------- */

.t-display-large {
	@mixin t-display-large;
}

/* -------------------------------------------------------------------------
 * Display
 * ------------------------------------------------------------------------- */

.t-display {
	@mixin t-display;
}

/* -------------------------------------------------------------------------
 * Display Small
 * ------------------------------------------------------------------------- */

.t-display-small {
	@mixin t-display-small;
}

/* -------------------------------------------------------------------------
 * Display X-Small
 * ------------------------------------------------------------------------- */

.t-display-x-small {
	@mixin t-display-x-small;
}

/* -------------------------------------------------------------------------
 * Display XX-Small
 * ------------------------------------------------------------------------- */

.t-display-xx-small {
	@mixin t-display-xx-small;
}

/* -------------------------------------------------------------------------
 * Body Large
 * ------------------------------------------------------------------------- */

.t-body-large {
	@mixin t-body-large;
}

/* -------------------------------------------------------------------------
 * Body
 * ------------------------------------------------------------------------- */

.t-body {
	@mixin t-body;
}

/* -------------------------------------------------------------------------
 * Body Small
 * ------------------------------------------------------------------------- */

.t-body-small {
	@mixin t-body-small;
}

/* -------------------------------------------------------------------------
 * Overline
 * ------------------------------------------------------------------------- */

.t-overline {
	@mixin t-overline;
}

/* -------------------------------------------------------------------------
 * Caption
 * ------------------------------------------------------------------------- */

.t-caption {
	@mixin t-caption;
}

/* -------------------------------------------------------------------------
 * Button
 * ------------------------------------------------------------------------- */

.t-button {
	@mixin t-button;
}

/* -------------------------------------------------------------------------
 * Text Button/Call To Action
 * ------------------------------------------------------------------------- */

.t-text-button {
	@mixin t-text-button;
}

/* -------------------------------------------------------------------------
 * Input
 * ------------------------------------------------------------------------- */

.t-input {
	@mixin t-input;
}

/* -------------------------------------------------------------------------
 * Label
 * ------------------------------------------------------------------------- */

.t-label {
	@mixin t-label;
}

/* -------------------------------------------------------------------------
 * Helper
 * ------------------------------------------------------------------------- */

.t-helper {
	@mixin t-helper;
}

/* -------------------------------------------------------------------------
 * Tag
 * ------------------------------------------------------------------------- */

.t-tag {
	@mixin t-tag;
}

/* -------------------------------------------------------------------------
 * Text Alignment
 * .has-* classes are added by WP Core / Gutenberg so we'll target them
 * by default. We'll add the .t-* classes to target our customizations.
 * ------------------------------------------------------------------------- */

.t-text-align-center,
.has-text-align-center {
	@mixin t-text-align-center;
}

.t-text-align-right,
.has-text-align-right {
	@mixin t-text-align-right;
}

.t-text-align-left,
.has-text-align-left {
	@mixin t-text-align-left;
}

.t-text-align-justify,
.has-text-align-justify {
	@mixin t-text-align-justify;
}

