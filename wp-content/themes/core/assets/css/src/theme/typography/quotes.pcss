/* -----------------------------------------------------------------------------
 *
 * Typography: Quotes & Blockquote
 *
 * ----------------------------------------------------------------------------- */

/* -----------------------------------------------------------------------------
 * Quotes
 * ----------------------------------------------------------------------------- */

[data-type="core/quote"] > q, /* Hack to overcome Core block editor styles. */
.quote,
.t-sink > q {
	@mixin t-quote;
	@mixin t-display-small;

	display: block;
}

/* -----------------------------------------------------------------------------
 * Blockquotes
 * ----------------------------------------------------------------------------- */

[data-type="core/quote"] > blockquote, /* Hack to overcome Core block editor styles. */
.blockquote,
.t-sink > blockquote {
	@mixin t-display-small;

	@media (--viewport-full) {
		position: relative;

		&:before {
			content: '';
			position: absolute;
			left: calc(-1 * (var(--grid-1-col) + var(--grid-gutter)));
			top: 0;
			height: 100%;
			border-left: 4px solid var(--color-primary);
		}
	}

	p {
		@mixin t-quote;
		@mixin t-display-small;
	}
}

/* -----------------------------------------------------------------------------
 * Cite
 * ----------------------------------------------------------------------------- */

.wp-block-quote__citation, /* Hack to overcome Core block editor styles. */
.cite,
.t-sink > blockquote cite {
	@mixin t-overline;

	display: inline-block;
	margin-top: var(--spacer-10);
	font-style: normal;
	color: var(--color-grey);
}
