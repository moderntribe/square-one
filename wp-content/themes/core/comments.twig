{% if post_password_required == false %}

	<div id="comments" class="comments" data-js="comment-form">

		{% if have_comments %}

			<h6 class="comments__title h4">{{ title }}</h6>

			<ol class="comments__list">
				{{ comments }}
			</ol>

			{{ include( 'content/pagination/comments.twig' ) }}

			{% if open == false %}
				<p class="comments__none">{{ lang[ 'Comments are closed.' ]|esc_html }}</p>
			{% endif %}

		{% endif %}

		{{ form }}

	</div>

{% endif %}