.ginput_complex {
	@mixin clearfix;

	margin-bottom: -11px;

	label {
		@mixin form-control-helper;

		display: block;
		margin-bottom: var(--form-margin-small);
	}
}

.ginput_full {
	display: block;
}

.ginput_right,
.ginput_left,
.name_first,
.name_last {
	@mixin clearfix;

	display: block;

	@media (--viewport-medium) {
		width: 50%;
	}
}

.ginput_left,
.name_first {
	@media (--viewport-medium) {
		padding-right: var(--gf-control-complex-gutter);
		float: left;
	}
}

.ginput_right,
.name_last {
	@media (--viewport-medium) {
		padding-left: var(--gf-control-complex-gutter);
		float: right;
	}
}

.gfield_date_dropdown_month,
.gfield_date_month,
.gfield_time_hour {
	@media (--viewport-medium) {
		padding-right: var(--gf-control-complex-gutter);
	}
}

.gfield_date_dropdown_day,
.gfield_date_day,
.gfield_time_minute {
	@media (--viewport-medium) {
		padding-left: var(--gf-control-complex-gutter);
		padding-right: var(--gf-control-complex-gutter);
	}
}

.gfield_date_dropdown_year,
.gfield_date_year,
.gfield_time_ampm {
	@media (--viewport-medium) {
		padding-left: var(--gf-control-complex-gutter);
	}

	label {
		margin-bottom: 0;

		@media (--viewport-medium) {
			margin-bottom: var(--gf-control-complex-gutter);
		}
	}
}

/*
* Utility class to use for inline forms.
* Set up only for an individual form field and Submit button
*/

.gform_inline {
	.gform_wrapper {
		& > form {
			display: flex;
			align-items: center;
		}

		.gform_body {
			flex: 1;
		}

		.gform_footer {
			margin-left: var(--spacer-10);
		}
	}
}