.ginput_list {

	input {
		background-color: var(--form-control-bgd-color);
	}

	.gfield_list {
		margin-top: 0;
		margin-bottom: 0;
		table-layout: auto;
	}

	.gfield_list_icons {
		width: 50px;
		padding-left: 0;
		padding-right: 0;

		.add_list_item,
		.delete_list_item {
			margin: 0 auto !important;
		}

		.delete_list_item {
			margin-top: 8px !important;
		}
	}
}
