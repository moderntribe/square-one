.s-wrapper {
	position: relative;
	width: 100%;
	padding-top: var(--spacer-lg);
	padding-bottom: var(--spacer-lg);
}

.s-wrapper--no-padding {
	padding-top: 0;
	padding-bottom: 0;
}
