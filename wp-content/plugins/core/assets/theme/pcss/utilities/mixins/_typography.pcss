
/* -----------------------------------------------------------------------------
 *
 * Icons
 *
 * ----------------------------------------------------------------------------- */

@define-mixin icon {
	font-family: var(--font-family-core-icons);
	speak: none;
	font-style: normal;
	font-weight: normal;
	font-variant: normal;
	text-transform: none;
	line-height: 1;
	-webkit-font-smoothing: antialiased;
	-moz-osx-font-smoothing: grayscale;
	text-rendering: auto;
}

/* -------------------------------------------------------------------------
 *
 * Body Content
 *
 * ------------------------------------------------------------------------- */

@define-mixin body-content {
	font-size: var(--font-size-content-s);

	@media (--viewport-medium) {
		font-size: var(--font-size-content);
	}
}

/* -----------------------------------------------------------------------------
 *
 * Quotes & Blockquotes
 *
 * ----------------------------------------------------------------------------- */

@define-mixin quote-base {
	max-width: 800px;
	padding: var(--spacer);
}

@define-mixin quote-text {
	color: var(--color-black);
	font-family: var(--font-family-base);
	font-size: 28px;
	font-style: normal;
	font-weight: var(--font-weight-bold);
	line-height: var(--line-height-s);
	text-align: center;

	@media (--viewport-medium) {
		font-size: 36px;
		line-height: var(--line-height-s);
	}
}
